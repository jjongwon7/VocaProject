<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible"
    android:focusable="true"
    android:focusableInTouchMode="true">
<!--  화면이 리프레시 될 때, editText로 자동으로 포커스가 가는 현상 방지-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Part1" />

    <TextView
        android:id="@+id/textview_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="진행률"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:max="30"
        android:progress="0"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:gravity="center"
        android:hint="소문자로 입력하세요."
        android:imeOptions="flagNoFullscreen"
        android:inputType="textNoSuggestions"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="&lt;뜻&gt;" />

    <FrameLayout
        android:id="@+id/meanFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="명사 \n 1.여권\n2.(어떤 일을 가능하게하는)수단"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="명사 \n 1.공항"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="명사 \n 1.여객기의 탑승권"
            android:visibility="invisible" />
    </FrameLayout>
    <!--    점수출력-->
    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/result_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User의 Part1 점수 ?? 점" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="오답" />

                <TextView
                    android:id="@+id/testresult1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="passport\n\n명사 \n 1.여권\n 2.(어떤 일을 가능하게하는)수단\n"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/testresult2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="airport\n\n명사 \n 1.공항\n"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/testresult3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="boarding pass\n\n명사 \n 1.여객기의 탑승권"
                    android:visibility="gone" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="\n\n scroll view test(결과물에선 출력 안함) \n\n"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="\n\n scroll view test \n\n"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="\n\n scroll view test \n\n"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="\n\n scroll view test \n\n"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="\n\n scroll view test \n\n"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
